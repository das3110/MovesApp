<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="none"
    tools:context=".Preferencias">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/preferencias" />

    <Button
        android:id="@+id/buttonOk2"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonsplashscreen"
        android:layout_width="172dp"
        android:layout_height="72dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:onClick="Tiempos"
        android:text="Tiempo splash screen"
        app:layout_constraintBottom_toTopOf="@+id/buttonOk2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="287dp">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonNombre"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="261dp"
        android:layout_height="38dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/username"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:fontFamily="@font/alfa_slab_one"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <EditText
        android:id="@+id/txtIngresarNombre"
        android:layout_width="233dp"
        android:layout_height="42dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:backgroundTintMode="add"
        android:ems="10"
        android:fontFamily="@font/alfa_slab_one"
        android:forceHasOverlappingRendering="false"
        android:hint="@string/nombreIngresar"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNombre"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.091" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFeatureSettings=' android:fontFamily="@font/alfa_slab_one"'
        android:text="@string/modooscuro"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonsplashscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngresarNombre"
        app:layout_constraintVertical_bias="0.595" />


</androidx.constraintlayout.widget.ConstraintLayout>